<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="root" minWidth="250" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

	<VBox fx:id="vboxMain" spacing="10">

		<AnchorPane>

			<HBox fx:id="hboxForm" spacing="10">

				<TextField fx:id="textWord" promptText="Your word" />

			</HBox>

			<HBox fx:id="hboxWindowButtons">

				<Button fx:id="buttonClose" text="X" />

			</HBox>

		</AnchorPane>

		<AnchorPane>

			<Label fx:id="labelResult" id="label-result" text="Translate a word" />

		</AnchorPane>

	</VBox>

</AnchorPane>
