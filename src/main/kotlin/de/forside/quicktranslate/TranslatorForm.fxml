<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="root" minWidth="250" styleClass="body" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>

	<VBox fx:id="vboxMain" spacing="10">

		<AnchorPane>

			<HBox fx:id="hboxForm" spacing="10">

				<TextField fx:id="textWord" promptText="Your word" />

			</HBox>

			<HBox fx:id="hboxWindowButtons">

				<Button fx:id="buttonClose" text="X" />

			</HBox>

		</AnchorPane>

		<AnchorPane>

			<Label fx:id="labelResult" text="Translate a word" />

		</AnchorPane>

	</VBox>

</AnchorPane>
